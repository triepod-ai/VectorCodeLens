# VectorCodeLens Environment Configuration

# Required Settings
VECTOR_LENS_QDRANT_URL=http://localhost:6333

# Optional Settings
VECTOR_LENS_LLM_SERVICE_URL=http://localhost:11434
VECTOR_LENS_CLAUDE_API_KEY=your_claude_api_key
VECTOR_LENS_DEFAULT_MODEL=claude-3-haiku
VECTOR_LENS_PORT=3000

# Feature Flags (true/false)
VECTOR_LENS_USE_LOCAL_EMBEDDINGS=false
VECTOR_LENS_ENABLE_GIT_ANALYSIS=false
VECTOR_LENS_ENABLE_CLOUD_STORAGE=false

# Performance Settings
VECTOR_LENS_CHUNK_SIZE=100
VECTOR_LENS_CHUNK_OVERLAP=20

# Logging
VECTOR_LENS_LOG_LEVEL=info  # options: error, warn, info, debug
